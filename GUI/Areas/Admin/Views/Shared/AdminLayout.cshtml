<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Angel Shop</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://use.fontawesome.com/releases/v5.0.8/css/all.css" rel="stylesheet">


</head>
<body>
    @{
        if (!(Session.Count > 0))
        {
            Response.Redirect("/Home/Index");
        }
    }
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Admin Manage", "Index", "Order", new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Order", "Index", "Order", new { @class = "navbar-brand" })</li>
                    <li><a class="navbar-brand" href="~/Admin/Product/Index">Product</a></li>
                    @{
                        if (Session["role"].ToString() == "admin")
                        {
                            <li>@Html.ActionLink("Supplier", "Index", "Supplier", new { @class = "navbar-brand" })</li>
                            <li>@Html.ActionLink("Territory", "Index", "Territory", new { @class = "navbar-brand" })</li>
                            <li>@Html.ActionLink("Employee", "Index", "Employee", new { @class = "navbar-brand" })</li>
                            <li>@Html.ActionLink("Shipper", "Index", "Shipper", new { @class = "navbar-brand" })</li>
                            <li>@Html.ActionLink("Category", "Index", "Category", new { @class = "navbar-brand" })</li>
                            <li>@Html.ActionLink("Region", "Index", "Region", new { @class = "navbar-brand" })</li>
                        }
                    }
                    <li>@Html.ActionLink("Report", "Index", "Report", new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Log out", "Logout", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Angel Shop</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)

</body>
</html>

