
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}

<h2>Finish Your Register</h2>
<h3>One more step to complete your register</h3>

<section class="row">
    <div><p class="text-danger" id="finish-valid"></p></div>
    <form method="post">
        <section class="form-horizontal">
            <div class="form-group">
                <label for="company-name" class="col-md-2 control-label">Your Company Name <span class="text-danger">*</span></label>
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-building" aria-hidden="true"></i></span>
                        <input type="text" class="form-control" name="company-name" id="company-name" placeholder="Enter your company name"   />
                        <span class="text-danger" id="company-name-valid"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">

                <label for="name" class="col-md-2 control-label">Your Name  <span class="text-danger">*</span></label>
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>
                        <input type="text" class="form-control" name="name" id="name" placeholder="Enter your name"   />
                        <span class="text-danger" id="name-valid"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="title" class="col-md-2 control-label">Your Title</label>
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fas fa-address-book" aria-hidden="true"></i></span>
                        <input type="text" class="form-control" name="title" id="title" placeholder="Enter your title"   />
                        <span class="text-danger" id="title-valid"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="company-address" class="col-md-2 control-label">Your Company Address  <span class="text-danger">*</span></label>
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fas fa-map-marker" aria-hidden="true"></i></span>
                        <input type="text" class="form-control" name="company-address" id="company-address" placeholder="Enter your company address"   />
                        <span class="text-danger" id="company-address-valid"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="city" class="col-md-2 control-label">City  <span class="text-danger">*</span></label>
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fas fa-circle" aria-hidden="true"></i></span>
                        <input type="text" class="form-control" name="city" id="city" placeholder="Enter city"   />
                        <span class="text-danger" id="city-valid"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="company-name" class="col-md-2 control-label">Region</label>
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fas fa-chart-area" aria-hidden="true"></i></span>
                        <input type="text" class="form-control" name="region" id="region" placeholder="Enter your company region"   />
                        <span class="text-danger" id="region-valid"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="company-name" class="col-md-2 control-label">Post Code</label>
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fas fa-sitemap" aria-hidden="true"></i></span>
                        <input type="text" class="form-control" name="post-code"  id="post-code" placeholder="Enter your post code"   />
                        <span class="text-danger" id="post-code-valid"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="company-name" class="col-md-2 control-label">Country</label>
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fas fa-address-card" aria-hidden="true"></i></span>
                        <input type="text" class="form-control" name="country" id="country" placeholder="Enter your company country"   />
                        <span class="text-danger" id="country-valid"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="company-name" class="col-md-2 control-label">Phone</label>
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fas fa-phone" aria-hidden="true"></i></span>
                        <input type="text" class="form-control" name="phone" id="phone" placeholder="Enter your company phone"   />
                        <span class="text-danger" id="phone-valid"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="company-name" class="col-md-2 control-label">Fax</label>
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fas fa-fax" aria-hidden="true"></i></span>
                        <input type="text" class="form-control" name="fax" id="fax" placeholder="Enter your company fax"   />
                        <span class="text-danger" id="fax-valid"></span>
                    </div>
                </div>
            </div>
            <section class="form-group">
                <p>The field has <span class="text-danger">*</span> can not empty</p>
                <div class="col col-md-offset-10 col-md2">
                    <input type="button" class="btn btn-primary" value="Next" id="next" />
                </div>
            </section>
        </section>
    </form>
</section>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/Home/about.js"></script>

